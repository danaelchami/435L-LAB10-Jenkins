pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
        PYTHON = 'venv\\Scripts\\python.exe'
        PIP = 'venv\\Scripts\\pip.exe'
    }

    stages {

        stage('Setup') {
            steps {
                script {
                    bat """
                    echo Setting up Python environment...
                    if exist ${VIRTUAL_ENV} rmdir /s /q ${VIRTUAL_ENV}
                    python -m venv ${VIRTUAL_ENV}
                    ${PYTHON} -m pip install --upgrade pip
                    ${PIP} install flake8 pytest coverage bandit
                    ${PIP} list
                    """
                }
            }
        }

        stage('Lint') {
            steps {
                bat "${PYTHON} -m flake8 app.py"
            }
        }

        stage('Test') {
            steps {
                bat "${PYTHON} -m pytest"
            }
        }

        stage('Coverage') {
            steps {
                bat """
                ${PYTHON} -m coverage run -m pytest
                ${PYTHON} -m coverage report -m
                """
            }
        }

        stage('Security Scan') {
            steps {
                bat "${PYTHON} -m bandit -r ."
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying application..."
                bat "${PYTHON} app.py"
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
